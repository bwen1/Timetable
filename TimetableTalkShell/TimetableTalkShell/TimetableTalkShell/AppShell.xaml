    <Shell.FlyoutHeader>
        <controls:FlyoutHeader />
    </Shell.FlyoutHeader>
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Timetable Page"
                  ContentTemplate="{DataTemplate views:ItemsPage}"
                      IsTabStop="False"/>
        <ShellContent Title="Signup Page"
                      ContentTemplate="{DataTemplate viewsHano:SimpleSignUpPage}" />
        <ShellContent Title="Log in Page"
                      ContentTemplate="{DataTemplate viewsHano:SimpleLoginPage}" 
                      IsTabStop="False"/>
        <ShellContent Title="Reset Password Page"
                      ContentTemplate="{DataTemplate viewsHano:SimpleResetPasswordPage}" 
                      IsTabStop="False"/>
        <ShellContent Title="Review Page"
                      ContentTemplate="{DataTemplate viewsReviews:ReviewPage}" 
                      IsTabStop="False"/>
        <ShellContent Title="About Page"
                      ContentTemplate="{DataTemplate viewsAbout:AboutUsSimplePage}" 
                      IsTabStop="False"/>
        <ShellContent Title="Settings Page"
                      ContentTemplate="{DataTemplate views:BillPage}"
                      IsTabStop="False"/>
        <ShellContent Title="Timetable Page"
                      ContentTemplate="{DataTemplate views:ThomasPage}"
                      IsTabStop="False" />
    </FlyoutItem>
    
